<UserControl x:Class="ML.Guide.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:ML.Guide.Views"
             mc:Ignorable="d"   
             d:DesignHeight="80" d:DesignWidth="1000"
             MinHeight="100">
    <TabControl Background="White"
                Style="{DynamicResource TabControlBaseStyle}"
                FontFamily="/Resource/#iconfont">
        <TabItem Header="&#xf07e; Runner">
            <views:MenuRunnerView/>
        </TabItem>
        <TabItem Header="&#xef4d; Option">
            <views:MenuOptionView/>
        </TabItem>
    </TabControl>
</UserControl>
